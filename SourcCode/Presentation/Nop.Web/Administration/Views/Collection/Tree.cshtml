@{
    //page title
    ViewBag.Title = T("Admin.Catalog.Collections.Manage").Text;
}
@Html.AntiForgeryToken()
<div class="section-header">
    <div class="title">
        <img src="@Url.Content("~/Administration/Content/images/ico-catalog.png")" alt="" />
        @T("Admin.Catalog.Collections.Manage") @Html.ActionLink("(" + T("Admin.Catalog.Collections.SwitchToListView") + ")", "List")
    </div>
    <div class="options">
        <a href="@Url.Action("Create")" class="k-button">@T("Admin.Common.AddNew")</a>
    </div>
</div>
<table class="adminContent">
    <tr>
        <td>
            <div id="collection-treeview"></div>

            <script>
                collections = new kendo.data.HierarchicalDataSource({
                    transport: {
                        read: {
                            url: "@Html.Raw(Url.Action("TreeLoadChildren", "Collection"))",
                            type: "POST",
                            dataType: "json",
                            data: addAntiForgeryToken
                        }
                    },
                    schema: {
                        model: {
                            id: "id",
                            hasChildren: "hasChildren"
                        }
                    }
                });

                $(document).ready(function() {
                    $("#collection-treeview").kendoTreeView({
                        dataSource: collections,
                        dataTextField: "Name",
                        select: function (e) {
                            var dataItem = this.dataItem(e.node);
                            var url = "@(Url.Action("Edit"))" + "/" + dataItem.id;
                            window.location = url;
                        }
                    });
                });

                
            </script>
        </td>
    </tr>
</table>
