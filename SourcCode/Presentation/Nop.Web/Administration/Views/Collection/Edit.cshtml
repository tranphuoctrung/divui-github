@model CollectionModel
@{
    //page title
    ViewBag.Title = T("Admin.Catalog.Collections.EditCollectionDetails").Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "collection-form" }))
{
    @Html.AntiForgeryToken()
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-catalog.png")" alt="" />
            @T("Admin.Catalog.Collections.EditCollectionDetails") - @Model.Name @Html.ActionLink("(" + T("Admin.Catalog.Collections.BackToList") + ")", "List")
        </div>
        <div class="options">
            <input type="submit" value="@T("Admin.Common.Preview")" onclick="javascript:OpenWindow('@Url.RouteUrl("Collection", new { SeName = Model.SeName })', 800, 600, true); return false;" class="k-button" />
            <input type="submit" name="save" class="k-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="k-button" value="@T("Admin.Common.SaveContinue")" />
            <span id="collection-delete" class="k-button">@T("Admin.Common.Delete")</span>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
@Html.DeleteConfirmation("collection-delete")