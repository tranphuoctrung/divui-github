@model ProductModel.ProductOptionModel
@{
    //page title
    ViewBag.Title = T("Admin.Catalog.Products.ProductOptions.AddNew").Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "productoption-form" }))
{
    @Html.AntiForgeryToken()
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-catalog.png")" alt="" />
            @T("Admin.Catalog.Products.ProductOptions.AddNew") @Html.ActionLink("(" + T("Admin.Catalog.Products.ProductOptions.BackToList") + ")", "Edit", new { id = Model.ProductId })
        </div>
        <div class="options">
            <input type="submit" name="save" class="k-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="k-button" value="@T("Admin.Common.SaveContinue")" />
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate.ProductOption", Model)
}