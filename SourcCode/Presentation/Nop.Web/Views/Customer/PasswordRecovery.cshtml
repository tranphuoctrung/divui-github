@model PasswordRecoveryModel
@using Nop.Web.Models.Customer;
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
}
<div class="static-page-cont-wrp">
    <h2 class="page-title">@T("Account.PasswordRecovery")</h2>
    <div class="row" >
        <div class="col-md-6">
            @if (!String.IsNullOrEmpty(Model.Result))
            {
                <div class="result">
                    @Model.Result
                </div>
            }
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <p class="tooltip">@T("Account.PasswordRecovery.Tooltip")</p>
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { }, ":")
                    @Html.TextBoxFor(model => model.Email, new { @class = "email" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <input type="submit" name="send-email" class="btn btn-warning" value="@T("Account.PasswordRecovery.RecoverButton")" />
            }
        </div>
    </div>
    
</div>
