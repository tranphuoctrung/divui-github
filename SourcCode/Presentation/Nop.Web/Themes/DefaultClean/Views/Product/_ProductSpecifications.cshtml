@model IList<ProductSpecificationModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <section class="key-details">
        <h2>@T("Products.Specs")</h2>
        <div class="key-details-content">
           @for (int i = 1; i < Model.Count; i++)
           {
               var item = Model[i];
                <div class="key-details-item @item.CssClass">
                    <div class="label">@item.SpecificationAttributeName</div>
                    <div class="info">@HttpUtility.HtmlDecode(item.ValueRaw)</div>
                </div>
           }
        </div>
    </section>
}
