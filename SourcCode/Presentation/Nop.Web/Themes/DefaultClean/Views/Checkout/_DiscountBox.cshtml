@model OnePageCheckoutModel
@using Nop.Web.Models.Checkout;
@if (Model.DiscountBox.Display)
{
    <div class="redeem-code-wrp">
        <a data-toggle="collapse" id="collapseExample" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">@T("ShoppingCart.DiscountCouponCode") <i class="icon icon-plus-circle"></i></a>
        <div class="collapse" id="collapseExample">
            <div class="well">
                <div class="form-group">
                    <input type="text" name="discountcouponcode" class="form-control" placeholder="Vui lòng nhập tại đây">
                    <button type="submit" name="applydiscountcouponcode" value="true" class="btn btn-warning">@T("ShoppingCart.DiscountCouponCode.Button")</button>
                </div>
                @if (!String.IsNullOrEmpty(Model.DiscountBox.Message))
                {
                    <div class="@(Model.DiscountBox.IsApplied ? "message-success" : "message-failure")">
                        @Model.DiscountBox.Message
                    </div>
                }
                @if (!String.IsNullOrEmpty(Model.DiscountBox.CurrentCode))
                {
                    <div class="current-code">
                        <span class="applied-discount-code">@string.Format(T("ShoppingCart.DiscountCouponCode.CurrentCode").Text, Model.DiscountBox.CurrentCode)</span>
                        @*empty value (little hack for FormValueExistsAttribute)*@
                        <input type="submit" name="removediscountcouponcode" value=" " title="@T("Common.Remove")" class="remove-discount-button" />
                    </div>
                }
            </div>
        </div>
    </div>

    if (Model.CouponCollapsed)
    {
        <script type="text/javascript">
            $(document).ready(function () {
                $('#collapseExample').trigger('click');
            });
        </script>
    }
}