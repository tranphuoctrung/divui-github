@model HeaderLinksModel
@using Nop.Web.Models.Common;
<ul class="nav navbar-nav navbar-right">
    @Html.Widget("header_links_before")
    
    @if (Model.ShoppingCartEnabled)
    {
        <li id="topcartlink">
            <a href="@Url.RouteUrl("ShoppingCart")">
                <i class="icon icon-cart"></i>@T("ShoppingCart").Text
                <span class="navbar-cart-ammount">@T("ShoppingCart.HeaderQuantity", Model.ShoppingCartItems)</span>
            </a>
        </li>
    }
    
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="icon icon-question"></i>Hỗ trợ <span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a href="#"><i class="icon icon-phone"></i>Hotline: <strong>0908 1080 98</strong></a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#"><i class="icon  icon-info-circled-2"></i>Câu hỏi thường gặp</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#"><i class="icon icon-email"></i>Liên hệ</a></li>
        </ul>
    </li>
    @if (Model.IsAuthenticated)
    {
        <li><a href="@Url.RouteUrl("CustomerInfo")"><i class="icon icon-user-6"></i>@Model.CustomerEmailUsername</a></li>
        <li><a href="@Url.RouteUrl("Logout")" class="icon icon-logout">@T("Account.Logout")</a></li>
    }
    else
    {
        <li><a href="@Url.RouteUrl("Register")" class="icon icon-user-6">@T("Account.Register")</a></li>
        <li><a href="@Url.RouteUrl("Login")" class="icon icon-login">@T("Account.Login")</a></li>
    }
    @Html.Widget("header_links_after")
</ul>
@if (Model.ShoppingCartEnabled)
{
    <script type="text/javascript">
            $(document).ready(function () {
                $('.dv-page-header').on('mouseenter', '#topcartlink', function () {
                    $('#flyout-cart').addClass('active');
                });
                $('.dv-page-header').on('mouseleave', '#topcartlink', function () {
                    $('#flyout-cart').removeClass('active');
                });
                $('.dv-page-header').on('mouseenter', '#flyout-cart', function () {
                    $('#flyout-cart').addClass('active');
                });
                $('.dv-page-header').on('mouseleave', '#flyout-cart', function () {
                    $('#flyout-cart').removeClass('active');
                });
            });
    </script>
}
