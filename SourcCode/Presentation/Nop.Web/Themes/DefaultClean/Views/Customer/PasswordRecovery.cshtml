@model PasswordRecoveryModel
@using Nop.Web.Models.Customer;
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
}
<div class="static-page-cont-wrp">
    <h2 class="page-title">@T("Account.PasswordRecovery")</h2>
    <p>@T("Account.PasswordRecovery.Tooltip")</p>
    <div class="row">
        <div class="col-md-6">
            @if (!String.IsNullOrEmpty(Model.Result))
            {
                <div class="result">
                    @Model.Result
                </div>
            }
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Email)
                    @Html.TextBoxFor(model => model.Email, new { type = "email", @class = "form-control", placeholder = T("Account.Fields.Email.Hint").Text })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <input type="submit" name="send-email" class="btn btn-warning" value="@T("Account.PasswordRecovery.RecoverButton")" />
            }
        </div>
    </div>

</div>
